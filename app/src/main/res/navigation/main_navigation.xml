<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.newsapp.ui.screen.newslist.view.NewsListFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.example.newsapp.ui.screen.newsdetail.view.NewsDetailFragment"
        android:label="NewsDetailFragment" >
        <argument
            android:name="article"
            app:argType="com.example.newsapp.data.components.network.repository.news.model.Article" />
    </fragment>
</navigation>